@model JobPortal.Application.ViewModels.ApplicationVm.ListOfApplicationsViewModel

@{
    ViewData["Title"] = "Aplikacje na ofertę";
}

<div class="container py-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>E-mail</th>
                    <th>Data Aplikacji</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Applications)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ApplicantName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ApplicantSurname)</td>
                        <td>@Html.DisplayFor(modelItem => item.ApplicantEmail)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateTime)</td>
                        <td>
                            <a asp-action="ApplicationDetails" asp-route-UserId="@item.UserId" asp-route-JobId="@item.JobId" class="btn btn-info btn-sm">Szczegóły Aplikacji</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
