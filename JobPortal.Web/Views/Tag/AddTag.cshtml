@model JobPortal.Application.ViewModels.JobVM.NewTagViewModel

@{
    ViewData["Title"] = "Dodawanie Tagu";
}

<h1 class="mb-4">Dodawanie Tagu</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTag">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Wróc Do Listy Tagów</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
