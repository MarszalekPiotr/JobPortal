@model JobPortal.Application.ViewModels.CategoryVm.ListCategoryForListViewModel

@{
    ViewData["Title"] = "Zarządzanie Kategoriami";
}

<h1 class="mb-4">Zarządzanie Kategoriami</h1>

<a asp-action="AddCategory" class="btn btn-primary mb-3">Dodaj Kategorię</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                ID Kategorii
            </th>
            <th>
                Nazwa Kategorii
            </th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
